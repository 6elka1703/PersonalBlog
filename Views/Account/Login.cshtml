@model LoginViewModel
@{
    ViewData["Title"] = "Авторизация";
}

<div class="col-md-offset-3 col-md-6 m-md-auto">
    <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <span class="heading">@ViewData["Title"]</span>
        <div class="form-group">
            <input type="email" class="form-control" id="inputEmail" placeholder="E-mail" asp-for="Email">
            <i class="fa fa-user"></i>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group help">
            <input type="password" class="form-control" id="inputPassword" placeholder="Password" asp-for="Password">
            <i class="fa fa-lock"></i>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <div class="main-checkbox">
                <input type="checkbox" id="checkbox1" asp-for="RememberMe" />
                <label for="checkbox1"></label>
            </div>
            <span class="text">Запомнить</span>
            <button type="submit" class="btn btn-default">ВХОД</button>
        </div>
    </form>
</div>