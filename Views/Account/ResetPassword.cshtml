@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Сброс пароля";
}

<div class="col-md-offset-3 col-md-6 m-md-auto">
    <form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-horizontal">
        <h2>@ViewData["Title"]</h2>
        <h4>Введите пароль</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="Code" type="hidden" />
        <input asp-for="Email" type="hidden" />
        <div class="form-group">
            <input type="password" class="form-control" id="inputPassword" placeholder="Введите пароль" asp-for="Password">
            <i class="fa fa-lock"></i>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="inputPasswordConfirm" placeholder="Подтвердите пароль" asp-for="ConfirmPassword">
            <i class="fa fa-lock"></i>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Сбросить</button>
    </form>
</div>