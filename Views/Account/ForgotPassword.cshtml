@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Забыли пароль?";
}

<div class="col-md-offset-3 col-md-6 m-md-auto">
    <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <div class="form-group">
            <input type="email" class="form-control" id="inputEmail" placeholder="E-mail" asp-for="Email">
            <i class="fa fa-user"></i>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Отправить</button>
        </div>
    </form>
</div>

    
