@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация нового пользователя";
}

<div class="col-md-offset-3 col-md-6 m-auto">
    <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
        <span class="heading">@ViewData["Title"]</span>
        <div class="form-group">
            <input type="text" class="form-control" id="inputUsername" placeholder="Имя пользователя" asp-for="UserName">
            <i class="fa fa-user"></i>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="inputEmail" placeholder="E-mail" asp-for="Email">
            <i class="fa fa-envelope"></i>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group help">
            <input type="password" class="form-control" id="inputPassword" placeholder="Введите пароль" asp-for="Password">
            <i class="fa fa-lock"></i>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group help">
            <input type="password" class="form-control" id="inputPasswordConfirm" placeholder="Подтвердите пароль" asp-for="PasswordConfirm">
            <i class="fa fa-lock"></i>
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" name="name" value="Регистрация" />
        </div>
    </form>
</div>