@model EditUserPersonalInfoViewModel

<div class="col-md-offset-3 col-md-6 m-auto">
    <form class="form-horizontal" method="post" enctype="multipart/form-data"  asp-area="" asp-controller="UserPersonalInfo" asp-action="Edit">
        <input type="hidden" asp-for="@Model.Id" />

        <span class="heading">@ViewData["Title"]</span>

        <div class="form-group">
            <div>
                <img class="rounded-circle w-50 border" id="PhotoImage" src="~/@Model.PhotoPath">
            </div>
            <input type="file" accept="image/*" class="form-control-file" onchange="onFileSelected(event)" name="userPhotoFile" />
        </div>

        <div class="form-group">
            <input type="text" class="form-control" id="inputUsername" placeholder="Имя пользователя" asp-for="UserName">
            <i class="fa fa-user"></i>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="inputEmail" placeholder="E-mail" asp-for="Email">
            <i class="fa fa-envelope"></i>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" name="name" value="Сохранить" />
        </div>
    </form>
</div>

<script>

    function onFileSelected(event) {
        var selectedFile = event.target.files[0];
        var reader = new FileReader();

        var imgtag = document.getElementById("PhotoImage");
        imgtag.title = selectedFile.name;

        reader.onload = function (event) {
            imgtag.src = event.target.result;
        };

        reader.readAsDataURL(selectedFile);
    }
</script>
