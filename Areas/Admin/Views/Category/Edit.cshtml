@model Category
@{
    if (Model.Id != default)
    {
        ViewData["Title"] = "Редактирование категории";
    }
    else
    {
        ViewData["Title"] = "Создание категории";
    }

}


<p class="h1 text-center">@ViewData["Title"]</p>

<div class="col-md-offset-3 col-md-6 m-md-auto">
    <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div> 

        <div class="form-group">
            <button type="submit" class="btn btn-default">Сохранить изменения</button>
            <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Categoryes">Отмена</a>
        </div>
    </form>
</div>

