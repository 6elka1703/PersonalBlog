@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Изменение пароля";
}
<h2>@ViewData["Title"]</h2>
<form method="post" asp-area="User" asp-action="ChangePassword" asp-controller="Home">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Старый пароль</label>
        <input type="password" asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
        <input type="password" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" role="button" />
    </div>
</form>